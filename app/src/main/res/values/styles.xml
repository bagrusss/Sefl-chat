<resources>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/main_yellow_color</item>
        <item name="android:textColorPrimary">@color/main_yellow_color</item>
        <item name="colorPrimary">@color/main_yellow_color</item>
        <item name="background">@color/main_yellow_color</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="alertDialogTheme">@style/DialogStyle</item>
        <item name="dialogTheme">@style/DialogStyle</item>
        <item name="colorPrimary">@color/fab_menu_color_pressed</item>
        <item name="colorPrimaryDark">@color/status_bar_color</item>
        <item name="colorAccent">@color/main_yellow_color</item>

        <item name="fab_colorNormal">@color/main_yellow_color</item>
        <item name="menu_colorNormal">@color/main_yellow_color</item>
        <item name="menu_colorPressed">@color/fab_menu_color_pressed</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SendEditText">
        <item name="colorControlNormal">@android:color/transparent</item>"
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
